{
    "name": "addwiki/mediawiki-api",
    "type": "library",
    "description": "A MediaWiki API library",
    "keywords": ["Mediawiki", "API"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Addshore"
        }
    ],
    "scripts": {
        "lint": "parallel-lint . --exclude vendor",
        "phpcs": "phpcs -ps",
        "fix": "phpcbf",
        "phpunit": "phpunit tests",
        "phpunit-unit": "phpunit tests/unit",
        "phpunit-integration": "phpunit tests/integration",
        "test": [
            "@lint",
            "@phpcs",
            "@phpunit"
        ]
    },
    "require": {
        "php": ">=7.4",
        "addwiki/mediawiki-api-base": "^3.0",
        "addwiki/mediawiki-datamodel": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "mediawiki/mediawiki-codesniffer": "~35.0",
        "monolog/monolog": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Addwiki\\Mediawiki\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Addwiki\\Mediawiki\\Api\\Tests\\Unit\\": "tests/unit/",
            "Addwiki\\Mediawiki\\Api\\Tests\\Integration\\": "tests/integration/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "3.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
